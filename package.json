{
  "name": "ssh-hop",
  "version": "1.0.0",
  "description": "A flexible, type-safe SSH orchestration library for multi-hop tunneling, remote command execution, and SFTP operations",
  "type": "module",
  "main": "./index.js",
  "module": "./index.mjs",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.mjs",
      "require": "./index.js"
    }
  },
  "files": [
    "dist",
    "index.js",
    "index.d.ts",
    "index.mjs"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "test:all": "npm run typecheck && npm run lint && npm run test",
    "check:exports": "attw --pack",
    "prepublishOnly": "npm run build",
    "sync": "git pull --rebase && npm install && npm test",
    "sync:quick": "git pull --rebase && npm install",
    "release": "node scripts/release.mjs",
    "token": "node scripts/get-token.mjs"
  },
  "keywords": [
    "ssh",
    "ssh2",
    "tunnel",
    "sftp",
    "remote",
    "bastion",
    "jump-server",
    "multi-hop",
    "port-forwarding",
    "kubernetes",
    "devops",
    "automation"
  ],
  "author": "oharu121 <jefflin1201@gmail.com> (https://github.com/oharu121)",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "ssh2": "^1.16.0"
  },
  "devDependencies": {
    "@types/ssh2": "^1.15.1",
    "typescript": "^5.9.3",
    "tsup": "^8.5.1",
    "@types/node": "^24.10.1",
    "@arethetypeswrong/cli": "^0.18.2",
    "vitest": "^4.0.13",
    "@vitest/coverage-v8": "^4.0.13",
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "eslint-config-prettier": "^10.1.8",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@clack/prompts": "^0.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oharu121/ssh-hop.git"
  },
  "bugs": {
    "url": "https://github.com/oharu121/ssh-hop/issues"
  },
  "homepage": "https://github.com/oharu121/ssh-hop#readme"
}
